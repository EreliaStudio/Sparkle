{
	"version": 3,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 16,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "default",
			"hidden": true,
			"generator": "Ninja",
			"toolchainFile": "C:/vcpkg/scripts/buildsystems/vcpkg.cmake",
			"binaryDir": "${sourceDir}/build/${presetName}",
			"cacheVariables": {
				"CMAKE_CXX_STANDARD": "20",
				"CMAKE_CXX_STANDARD_REQUIRED": "ON",
				"CMAKE_C_COMPILER": "gcc",
				"CMAKE_CXX_COMPILER": "g++",
				"VCPKG_TARGET_TRIPLET": "x64-mingw-static"
			}
		},
		{
			"name": "debug",
			"inherits": "default",
			"description": "Configure for Debug build",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "release",
			"inherits": "default",
			"description": "Configure for Release build",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		},
		{
			"name": "test",
			"inherits": "default",
			"description": "Configure with Test Units enabled",
			"cacheVariables": {
				"ENABLE_TESTS": "ON"
			}
		},
		{
			"name": "test-debug",
			"inherits": "test",
			"description": "Configure for Debug build with Test Units",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "test-release",
			"inherits": "test",
			"description": "Configure for Release build with Test Units",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		},
		{
			"name": "playground",
			"inherits": "default",
			"description": "Configure with Playground enabled",
			"cacheVariables": {
				"ENABLE_PLAYGROUND": "ON"
			}
		},
		{
			"name": "playground-debug",
			"inherits": "playground",
			"description": "Configure for Debug build with Playground",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "playground-release",
			"inherits": "playground",
			"description": "Configure for Release build with Playground",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		}
	],
	"buildPresets": [
		{
			"name": "default",
			"hidden": true,
			"configurePreset": "default"
		},
		{
			"name": "debug",
			"configurePreset": "debug"
		},
		{
			"name": "release",
			"configurePreset": "release"
		},
		{
			"name": "test",
			"configurePreset": "test"
		},
		{
			"name": "test-debug",
			"configurePreset": "test-debug"
		},
		{
			"name": "test-release",
			"configurePreset": "test-release"
		},
		{
			"name": "playground",
			"configurePreset": "playground"
		},
		{
			"name": "playground-debug",
			"configurePreset": "playground-debug"
		},
		{
			"name": "playground-release",
			"configurePreset": "playground-release"
		}
	],
	"testPresets": [
		{
			"name": "default",
			"hidden": true,
			"configurePreset": "default"
		},
		{
			"name": "debug",
			"configurePreset": "debug"
		},
		{
			"name": "release",
			"configurePreset": "release"
		},
		{
			"name": "test",
			"configurePreset": "test"
		},
		{
			"name": "test-debug",
			"configurePreset": "test-debug"
		},
		{
			"name": "test-release",
			"configurePreset": "test-release"
		}
	]
}