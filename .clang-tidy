Checks: >
  *,
  -cert-dcl16-c,
  -fuchsia*,
  -llvm-header-guard,
  -llvm-include-order,
  -llvmlibc*,
  -llvm-namespace-comment,
  -altera*,
  -hicpp-use-emplace,
  -hicpp-uppercase-literal-suffix,
  -hicpp-use-auto,
  -bugprone-branch-clone,
  -bugprone-easily-swappable-parameters,
  -misc-const-correctness,
  -misc-include-cleaner,
  -misc-no-recursion,
  -google-readability-namespace-comments,
  -readability-magic-numbers,
  -readability-identifier-length,
  -readability-simplify-boolean-expr,
  -readability-uppercase-literal-suffix,
  -readability-make-member-function-const,
  -readability-convert-member-functions-to-static,
  -modernize-use-trailing-return-type,
  -modernize-concat-nested-namespaces,
  -modernize-pass-by-value,
  -modernize-use-auto,
  -modernize-use-integer-sign-comparison,
  -cppcoreguidelines-pro-bounds-pointer-arithmetic,
  -cppcoreguidelines-pro-type-reinterpret-cast,
  -cppcoreguidelines-avoid-magic-numbers,
  -cppcoreguidelines-pro-type-union-access,
  -cppcoreguidelines-pro-bounds-constant-array-index,
  -performance-inefficient-string-concatenation,
  -performance-avoid-endl,
  -performance-no-int-to-ptr

CheckOptions:
  # Comparaisons bool/pointeurs
  - key: readability-implicit-bool-conversion.AllowIntegerConditions
    value: 'false'
  - key: readability-implicit-bool-conversion.AllowPointerConditions
    value: 'false'

  # Toujours return (value);
  - key: readability-braces-around-statements.ShortStatementLines
    value: '0'

  # Naming convention
  - key: readability-identifier-naming.VariableCase
    value: camelBack
  - key: readability-identifier-naming.PrivateMemberPrefix
    value: '_'
  - key: readability-identifier-naming.ProtectedMemberPrefix
    value: '_'
  - key: readability-identifier-naming.ParameterPrefix
    value: 'p_'

  # Interdire NULL et 0 pour pointeurs
  - key: modernize-use-nullptr.NullMacros
    value: 'NULL'
  - key: modernize-use-nullptr.NullValues
    value: '0'

  # override obligatoire
  - key: modernize-use-override.IgnoreDestructors
    value: 'true'

  # Includes inutilis√©s interdits
  - key: misc-unused-using-decls.IgnoreMacros
    value: 'false'
  - key: misc-unused-includes.IgnoreMacros
    value: 'false'

WarningsAsErrors: '*'
